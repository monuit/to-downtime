{
  "name": "toronto-downtime",
  "version": "1.0.0",
  "description": "Fun playful UI for Toronto real-time transit disruptions",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "node --loader ts-node/esm src/server/startup.ts",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node --loader ts-node/esm src/server/startup.ts",
    "load-data": "node src/server/load-data-node.mjs",
    "sync": "bun src/server/sync.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.markercluster": "^1.5.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "gsap": "^3.13.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "maplibre-gl": "^5.9.0",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.5.2",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.3.0",
    "three": "^0.128.0",
    "victory": "^37.3.6",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/maplibre-gl": "^1.13.2",
    "@types/node": "^20.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-grid-layout": "^1.3.5",
    "@types/three": "^0.128.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "terser": "^5.44.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
